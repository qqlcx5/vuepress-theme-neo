{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "@theme-hope/*": ["./packages/theme/src/client/*.js"]
    },
    "types": ["vuepress/client-types", "vite/client", "webpack-env"]
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.vue",
    "**/.vuepress/**/*.ts",
    "**/.vuepress/**/*.vue",
    ".markdownlint-cli2.mjs"
  ]
}
